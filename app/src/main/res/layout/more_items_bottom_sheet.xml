<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/white_top_round"
    android:padding="@dimen/_20sdp">

    <View
        style="@style/centerDivider"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="sans-serif-light"
        android:text="More Options: -)"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:drawablePadding="@dimen/_10sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/share"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        app:drawableStartCompat="@drawable/ic_baseline_share_24"/>

    <TextView
        android:id="@+id/review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/_10sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/review"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        app:drawableStartCompat="@drawable/baseline_reviews_24"/>

    <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/_10sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/logout"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        app:drawableStartCompat="@drawable/baseline_logout_24"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginVertical="@dimen/_5sdp"/>

    <TextView
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/_10sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/feedback_and_suggestion"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        app:drawableStartCompat="@drawable/ic_baseline_feedback_24"/>

</LinearLayout>
